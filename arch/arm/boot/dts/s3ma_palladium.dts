/dts-v1/;
#include <dt-bindings/gpio/gpio.h>
#include "s3ma.dtsi"

/ {
	model = "Exelis S3MA Palladium Environment";
	compatible = "exelis,s3ma_palladium";

	chosen {
		bootargs = "console=ttyAMA0,1887557";
	};

	memory {
		name = "memory";
		device_type = "memory";
		reg = <0x0 0x10000000>; /* 256 MB */
	};
	
	gpio-leds {
        compatible = "gpio-leds";

        user0 {
            label = "sp3:green:user0";
            gpios = <&gpio2 5 GPIO_ACTIVE_HIGH>;
        };
        user1 {
            label = "sp3:red:user0";
            gpios = <&gpio2 6 GPIO_ACTIVE_HIGH>;
        };
        user2 {
            label = "sp3:red:user1";
            gpios = <&gpio0 4 GPIO_ACTIVE_HIGH>;
        };
    };
};

&gpio0 {
	status = "okay";
};

&gpio1 {
	status = "okay";
};

&gpio2 {
	status = "okay";
};

&i2c0 {
	status = "okay";

    /* TBD */
	max31725@68 {
		compatible = "maxim,max31725";
		reg = <0x68>;
	};
};

&ssp0 {
    fsl,spi-num-chipselects = <2>;
    cs-gpios = <&gpio0 3 0>, <&gpio0 7 0>;
    flash: m25p80@0 {
        #address-cells = <1>;
        #size-cells = <1>;
        compatible = "sst,sst25vf032b", "st,m25p80";
        spi-max-frequency = <20000000>;
        reg = <0>;
    };
    dac: ltc2640@1 {
        #address-cells = <1>;
        #size-cells = <1>;
        spi-max-frequency = <20000000>;
        reg = <1>;
    };
    
};

&usb0 {
	status = "okay";
};

&usb1 {
	status = "okay";
};
